<div class="{{cssClass}}">
    <header class="sheet-header">
        <img class="profile-img" src="{{document.img}}" data-action="editImage" title="{{document.name}}" height="100"
            width="100" />
        <div class="header-details-panel">
            <div class="header-details charname">
                <input name="name" type="text" value="{{document.name}}" placeholder="{{localize 'ABEA.Item.Name'}}" />
            </div>
            <div class="form-group">
                <label>{{localize "ABEA.Item.Type"}}</label>
                <div class="form-fields">
                    <input type="text" name="system.type" value="{{document.system.type}}" class="item-generic-type"
                        placeholder="{{localize 'ABEA.Item.TypePlaceholder'}}" />
                </div>
            </div>
            <div class="form-group">
                <label>{{localize "ABEA.Item.Action.Label"}}</label>
                <div class="form-fields">
                    <select name="system.action.type">
                        {{selectOptions config.itemActionTypes selected=system.action.type localize=true}}
                    </select>
                </div>
            </div>

            {{#unless (eq system.action.type "none")}}
            <div class="form-group">
                <label>{{localize "ABEA.Item.Action.IsConsumable"}}</label>
                <div class="form-fields">
                    <input type="checkbox" name="system.action.isConsumable" {{checked system.action.isConsumable}} />
                </div>
            </div>
            {{/unless}}
            {{#if isHeal}}
            <div class="form-group">
                <label>{{localize "ABEA.Item.Action.Value"}}</label>
                <div class="form-fields">
                    <input type="number" name="system.action.value" value="{{system.action.value}}" min="0" step="1" />
                </div>
            </div>
            {{/if}}
        </div>
    </header>

    <div class="item-properties">
        <section class="sheet-body">
            <label class="description-label">{{localize "ABEA.Item.Description"}}</label>
            <div class="item-description-panel">
                <textarea placeholder="{{localize 'ABEA.Item.Description'}}" name="system.description"
                    id="system.description" rows="1">{{document.system.description}}</textarea>
            </div>
        </section>
    </div>
</div>